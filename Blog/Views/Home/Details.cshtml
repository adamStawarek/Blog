@model Post

@{
    Layout = "_Layout";
}

<h2>@Model.Title</h2>
<div>
    <span>@Model.Author - @Model.LastEditTime.ToLongDateString()</span>
</div>
<hr />
<div class="row">
    <div class="col-md-9">
        <p style="float: left; margin-right: 10px; margin-top: 20px;">
            <img class="media-object" src="@Model.Image" style="max-width: 300px; max-height: 250px;">
        </p>

        @Html.Raw(Model.Content)
    </div>

</div>
<hr/>
<section>
    <h3 class="text-primary">@Model.Comments.Count Comments</h3>
    <div id="commentSection"></div>    
</section>
<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</a>
@section Scripts
{
    <script src="~/js/Home/Details.js"></script>
    <script>
        createCommentTemplate('@Html.Raw(Model.Id)');
    </script>
}
