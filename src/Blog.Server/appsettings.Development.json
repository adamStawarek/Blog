{
  "ConnectionStrings": {
    "BlogDbContext": "Server=127.0.0.1,1533;Initial Catalog=BlogDb;Persist Security Info=False;User ID=sa;Password=Password#123;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/log-.txt",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5555"
        }
      }
    ]
  },
  "AuthMock": {
    "Enabled": true,
    "SeedDatabase": true,
    "User": {
      "Id": "4822E200-C907-40B5-9580-2FBD5F72E986",
      "UserName": "John",
      "Password": "Test1234!",
      "Email": "john@gmail.com",
      "Roles": [ "Admin" ]
    }
  }
}
